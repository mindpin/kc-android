<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:gravity="center_vertical"
        >
    <ImageView android:layout_width="40dp" android:layout_height="40dp"
               android:id="@+id/iv_cover"
               android:scaleType="centerCrop"
               android:layout_alignParentLeft="true"
            />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@id/tv_title"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/iv_cover"
              android:layout_toLeftOf="@+id/tutorial_learn_progress"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
            />

    <com.mindpin.android.kcroundprogressbar.KCRoundProgressBar
            android:id="@+id/tutorial_learn_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />

</RelativeLayout>