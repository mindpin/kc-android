<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:gravity="top"
    android:background="#F1F1F1"
    android:padding="5dp">

    <RelativeLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:gravity="top"
        >

        <com.mindpin.kc_android.widget.FontAwesomeTextView
            android:id="@+id/pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#CCC"
            android:background="#fafafa"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:text="@string/ic_my_note"
            />


        <ImageView
            android:id="@+id/tutorial_cover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pic"
            android:scaleType="fitXY"
            />



    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail">


        <TextView
            android:id="@+id/step_title_view"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#333"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/note_content_view"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/step_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8dp"
            android:textColor="#333"
            android:singleLine="false"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="12dp" />



        <LinearLayout android:id="@+id/intr_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_content_view"
            android:layout_marginTop="5dp"
            >

            <com.mindpin.kc_android.widget.FontAwesomeTextView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/ic_clock"
                />


            <TextView
                android:id="@+id/time_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/clock"
                android:textColor="#999"
                android:textSize="12dp" />

        </LinearLayout>



    </RelativeLayout>







</RelativeLayout>