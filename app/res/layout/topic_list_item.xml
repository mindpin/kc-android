<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topic_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10px" >
    </ImageView>


    <TextView
        android:id="@+id/topic_tutorial_count"
        android:layout_above="@+id/topic_icon"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />

    <TextView
        android:id="@+id/topic_title"
        android:layout_below="@+id/topic_tutorial_count"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TopicText"
        android:text="topic_title" />

    <TextView
        android:id="@+id/topic_desc"
        android:layout_below="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TopicText"
        android:text="topic_desc" />




</RelativeLayout>