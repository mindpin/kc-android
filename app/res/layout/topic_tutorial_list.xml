<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/topic_icon_img"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/topic_title_bar"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="50px">
        <Button
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_btn"
            android:textSize="20px"
            android:text="@string/fontawesome_back"
            android:background="#00000000"
            android:layout_width="50px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/topic_title_tv"
            android:background="#00000000"
            android:layout_toRightOf="@id/back_btn"
            android:layout_alignParentRight="true"
            android:textSize="16px"
            android:textColor="#ffffff"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:layout_below="@id/topic_title_bar"
        android:id="@+id/topic_desc_tv"
        android:background="#80000000"
        android:textColor="#fff"
        android:textSize="14px"
        android:paddingTop="10px"
        android:paddingLeft="50px"
        android:paddingRight="10px"
        android:layout_width="match_parent"
        android:layout_height="100px" />

    <it.sephiroth.android.library.widget.HListView
        android:id="@+id/topic_tutorial_list"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px"
        app:hlv_dividerWidth="5px"
        />

    <ImageView
        android:layout_above="@id/topic_tutorial_list"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="50px" />

    <com.mindpin.android.loadingview.LoadingView
        android:id="@+id/loading_view"
        android:visibility="visible"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>