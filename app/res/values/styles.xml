<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="KcTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

    <style name="TopicTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="TopicDesc">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/topic_title</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#dddddd</item>
        <item name="android:textSize">12dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TopicCountSection">
        <item name="android:background">#80000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="TopicTutorialCount">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="DescSection">
        <item name="android:background">#80000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="MenuLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/menu_line_background</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">true</item>
    </style>
    <style name="MenuLineFATV">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">#4d4d4d</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="MenuLineTV">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="ActionBarButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#4D4D4D</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/titlebar_icon</item>
    </style>
</resources>
